<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<!-- android:background="@drawable/fondo" -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#dcffe6"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:text="Marque los sintomas que usted padece"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <CheckBox
        android:id="@+id/CbFatiga"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Fatiga muscular"
        android:textColor="#a9a9a9"
        android:textSize="14sp"
        android:textStyle="normal|bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/CbCabeza"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Dolor de cabeza"
        android:textColor="#a9a9a9"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CbFiebre" />

    <CheckBox
        android:id="@+id/CbGusto"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Falta de olfato/gusto"
        android:textColor="#a9a9a9"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CbDiarrea" />

    <CheckBox
        android:id="@+id/CbFiebre"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Fiebre"
        android:textColor="#a9a9a9"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CbFatiga" />

    <CheckBox
        android:id="@+id/CbDiarrea"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Diarrea"
        android:textColor="#a9a9a9"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CbCabeza" />

    <Button
        android:id="@+id/BtSintomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Comprobar sintomas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CbGusto" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:background="#dcffe6"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="¡¡ATENCIÓN!! Esta prueba no simula ser un test PCR, asi que por favor, aunque usted no padezca alguno de estos sintomas, consulte con un médico o solicite una prueba PCR de inmediato."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtSintomas" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/CbFatiga"
        app:layout_constraintTop_toTopOf="@+id/CbFatiga"
        app:srcCompat="@drawable/dolor_muscular" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/CbFiebre"
        app:layout_constraintTop_toTopOf="@+id/CbFiebre"
        app:srcCompat="@drawable/fiebre" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/CbCabeza"
        app:layout_constraintTop_toTopOf="@+id/CbCabeza"
        app:srcCompat="@drawable/dolor_cabeza" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/CbDiarrea"
        app:layout_constraintTop_toTopOf="@+id/CbDiarrea"
        app:srcCompat="@drawable/diarrea" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/CbGusto"
        app:layout_constraintTop_toTopOf="@+id/CbGusto"
        app:srcCompat="@drawable/gusto" />

</androidx.constraintlayout.widget.ConstraintLayout>