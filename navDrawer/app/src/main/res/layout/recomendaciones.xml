<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvVideo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#28BBDF"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="Mas información en los siguientes medios"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="144dp"
                    android:background="#28BBDF"
                    android:gravity="center"
                    android:text="Consejos para la población"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="378dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:text="La pandemia de COVID-19 nos ha llevado a muchos a quedarnos en casa, donde mantenemos menos interacciones sociales y hacemos menos ejercicio. Por ello es importante mantenerse activos, cuidar nuestra salud mental, dejar el tabaco y mantener una dieta saludable"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.484"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:background="#28BBDF"
                    android:gravity="center"
                    android:text="Sanos en casa"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="379dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:text="•\tUtilice una mascarilla médica/quirúrgica si:\n\t\t○\tEs mayor de 60 años\n\t\t○\tTiene enfermedades preexistentes\n\t\t○\tSe siente mal y/o\n\t\t○\tEstá cuidando a un miembro de la familia enfermo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#28BBDF"
                    android:gravity="center"
                    android:text="Cuándo y cómo usar mascarilla"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/oms" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="378dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:lines="4"
                    android:text="Indicaciones específicas sobre el tipo de mascarilla que se ha de usar, y en qué circunstancias. "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="379dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:autoText="false"
                    android:text="•\tUtilice una mascarilla de tela, a menos que pertenezca\n\tusted a un grupo de riesgo determinado. Esto es\n\tespecialmente importante cuando no pueda mantener la\n\tdistancia física, en particular en entornos de\n\taglomeraciones y en interiores poco ventilados."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="379dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="5dp"
                    android:text="•\tDEMOSTRADO: los suplementos de vitaminas y minerales\n\tno curan la COVID-19. Sin embargo son fundamentales\n\tpara el buen funcionamiento del sistema inmunológico y\n\tdesempeñan un papel vital para la salud y el bienestar\n\tnutricional.\n\n•\tDEMOSTRADO: los estudios llevados a cabo demuestran\n\tque la hidroxicloroquina no produce efectos clínicos\n\tbeneficiosos en el tratamiento de la COVID-19. \n\n•\tDEMOSTRADO: Añadir pimiento picante a la sopa u otras\n\tcomidas NO previene ni cura la COVID-19.\n\n•\tLas redes 5G de telefonía móvil NO propagan la COVID-19"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" />

                <ImageView
                    android:id="@+id/youtube"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvVideo"
                    app:srcCompat="@drawable/yt" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    app:layout_constraintStart_toEndOf="@+id/youtube"
                    app:layout_constraintTop_toBottomOf="@+id/tvVideo"
                    app:srcCompat="@drawable/twitter" />

                <ImageView
                    android:id="@+id/internet"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    app:layout_constraintStart_toEndOf="@+id/twitter"
                    app:layout_constraintTop_toBottomOf="@+id/tvVideo"
                    app:srcCompat="@drawable/internett" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
